{
    "configurations": {
        "zoodle": {
            "adapter": "vscode-go",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/cmd/zoodle/",
                "args": [
                    "-d",
                    "${workspaceRoot}/.data/data/",
                    "-l",
                    "${workspaceRoot}/.data/logic/glitchless",
                    "-s",
                    "${workspaceRoot}/.data/spoiler.json"
                ],
                "mode": "debug",
                "dlvToolPath": "$GOPATH/bin/dlv"
            }
        },
        "test": {
            "adapter": "vscode-go",
            "configuration": {
                "request": "launch",
                "program": "${fileDirname}",
                "args": [],
                "mode": "test",
                "dlvToolPath": "$GOPATH/bin/dlv"
            }
        }
    }
}
