{
    "adapters": {
        "dlv-dap": {
            "variables": {
                "port": "${unusedLocalPort}"
            },
            "command": [
                "$GOPATH/bin/dlv",
                "dap",
                "--listen",
                "127.0.0.1:${port}"
            ],
            "port": "${port}"
        }
    },
    "configurations": {
        "zootler": {
            "adapter": "vscode-go",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/cmd/zootler/",
                "args": [
                    "-d",
                    "${workspaceRoot}/.data/data/",
                    "-l",
                    "${workspaceRoot}/.data/logic/glitchless"
                ],
                "mode": "debug",
                "dlvToolPath": "$GOPATH/bin/dlv"
            }
        },
        "test": {
            "adapter": "dlv-dap",
            "configuration": {
                "request": "launch",
                "program": "${fileDirname}/...",
                "args": [],
                "mode": "test"
            }
        }
    }
}
